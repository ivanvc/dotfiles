Section "InputClass"
	Identifier	"touchpad catchall"
	Driver		"libinput"
	MatchIsTouchpad	"on"
        MatchDevicePath "/dev/input/event*"

	Option	"NaturalScrolling" "true"
	Option	"Tapping" "true"
	Option	"DisableWhileTyping" "true"
	Option	"AccelSpeed" "-0.2"
	Option	"ScrollMethod" "twofinger"
EndSection
