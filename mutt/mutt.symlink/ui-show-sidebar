# vim: filetype=muttrc

set sidebar_visible = yes

bind  index j         sidebar-next
bind  index k         sidebar-prev
bind  index <tab>     sidebar-next-new
bind  index <backtab> sidebar-prev-new
bind  index gg        sidebar-first
bind  index G         sidebar-last

macro index <return>  "<sidebar-open><enter-command> source ~/.mutt/ui-hide-sidebar<enter>" ""
macro index q         "<enter-command> source ~/.mutt/ui-hide-sidebar<enter>"               ""
macro index <esc>     "<enter-command> source ~/.mutt/ui-hide-sidebar<enter>"               ""
